{
  "extends": "./typescript_paths.json",
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitOnError": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*",
    "./typings/images.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
