{
  "compilerOptions": {
      "outDir": "./build/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      // "baseUrl": ".",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": { 
        "@components/*": ["app/components/*"], // 要使用别名下的模块的，配置这个。 
        "@images/*": ["app/assets/images/*"], // 要使用别名下的模块的，配置这个。 
      } 
  },
  "include": [
      "./app/**/*",
      "./typings/images.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ], 
  
}